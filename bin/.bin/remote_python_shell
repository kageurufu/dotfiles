#!/bin/bash

REMOTE_SERVER=$1
cat <<'EOF' | ssh ${REMOTE_SERVER} "cat > ~/shell.sh"
if [[ $(id -u) -ne 0 ]]; then
  if ! sudo $0 $*; then
    echo "sudo \"$0 $*\" failed, cannot sudo"
    exit 2
  fi
  exit 0
fi

INSTANCE=$(docker ps -q)

docker exec -t -i $(docker ps -q) /bin/sh -c 'pip install ipython; python manage shell'
EOF

ssh -t ${REMOTE_SERVER} "bash -c 'chmod +x ~/shell.sh; ~/shell.sh'"

